// version.rc.in
// see https://stackoverflow.com/a/6699020/136285
#define VER_FILEVERSION             @GDCM_VERSION_MAJOR@,@GDCM_VERSION_MINOR@,@GDCM_VERSION_PATCH@,0
#define VER_FILEVERSION_STR         "@GDCM_VERSION_MAJOR@.@GDCM_VERSION_MINOR@.@GDCM_VERSION_PATCH@.0\0"

#define VER_PRODUCTVERSION          @GDCM_VERSION_MAJOR@,@GDCM_VERSION_MINOR@,@GDCM_VERSION_PATCH@,0
#define VER_PRODUCTVERSION_STR      "@GDCM_VERSION_MAJOR@.@GDCM_VERSION_MINOR@.@GDCM_VERSION_PATCH@\0"
//
1 VERSIONINFO
FILEVERSION VER_FILEVERSION
PRODUCTVERSION VER_PRODUCTVERSION
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
    BEGIN
      VALUE "FileVersion", VER_FILEVERSION_STR
      VALUE "ProductVersion", VER_PRODUCTVERSION_STR
    END
  END
  /* For some reason the ProductVersion would not appear unless I add */
  /* the following section: VarFileInfo */
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x0409, 1252
  END
END